<% include ../partials/header %>
	<div class="container">
		<div class="jumbotron">
			<div class="container">
				<h1>Welcome to the Campgrounds page</h1>

				<p>View all of our campgrounds from all over the world</p>

				<a href="/campgrounds/create" class="btn btn-outline-primary btn-lg">Add a new Campground</a>
			</div>
		</div>

		<main class="row">
			<div class="col-lg-12 mb-5 mt-4">
				<h3 class="text-center">Our Most Popular Campgrounds</h3>
			</div>

			<% campgrounds.forEach(campground => { %>
				<figure class="col-md-3 col-sm-6">
					<img src="<%= campground.image %>" class="img-fluid img-thumbnail" alt="<%= campground.name %>">

					<a href="/campgrounds/<%= campground._id %>">
						<figcaption class="text-center mt-2 font-italic text-primary"><%= campground.name %></figcaption>
					</a>
				</figure>
			<% }) %>
		</main>
	</div>
<% include ../partials/footer %>
