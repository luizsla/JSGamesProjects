<% include ../partials/header %>
    <div class="container">
        <div class="jumbotron">
            <div class="container">
                <h1 class="text-center">Adding new Comment to <%= campground.name %> </h1>
            </div>
        </div>

        <form action="/campgrounds/<%= campground._id %>/comments" method="post">
            <div class="form-group">
                <label for="comment-author">Author:</label>
                <input type="text" class="form-control" id="comment-author" name="comment[author]">
            </div>

            <div class="form-group">
                <label for="comment-text">Text:</label>
                <textarea class="form-control" name="comment[text]" id="comment-text" rows="10"></textarea>
            </div>

            <button class="btn btn-primary btn-block">Submit</button>
        </form>
    </div>
<% include ../partials/footer %>
